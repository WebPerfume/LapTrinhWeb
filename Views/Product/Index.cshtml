@using LapTrinhWeb.Models;
@using PagedList;
@using PagedList.Mvc;

@model PagedList.PagedList<Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Bootstrap icons-->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />

<section class="product">
    <div class="container">
        <h2 class="text-center">New Producst</h2>
        <div class="product__wrap">
            @foreach (var item in Model)
            {


            <div class="product__items">

                <img src="~/IMG/@item.Img" />
                <p class="title">@item.ProductName</p>
                <p><span>@String.Format(System.Globalization.CultureInfo.CurrentCulture, "{0:C0}", item.Price)</span><span>4.200.200</span></p>
                <button class="bi-cart-fill me-1">@Html.ActionLink("Add Cart", "AddtoCart", "ShoppingCart", new { Id = item.ProductId }, null)</button>
                <button>@Html.ActionLink("Preview", "Preview", new { id = item.ProductId })</button>
            </div>
            }
        </div>
        Trang @(Model.PageCount<Model.PageNumber?1:Model.PageNumber)/@Model.PageCount
        <hr />
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
    </div>
</section>
<section class="banner">
    <div class="banner__item">
        <img src="~/IMG/car.png" width="50" />
        <div class="txt">
            <p>FreeShip</p>
            <span>FreeShip with orders over 500</span>
        </div>
    </div>
    <div class="banner__item">
        <img src="~/IMG/technical-support.png" width="50" />
        <div class="txt">
            <p>Customer Service(9:00 - 21:00)</p>
            <span>013 32495 324</span>
        </div>
    </div>
    <div class="banner__item">
        <img src="~/IMG/exchange.png" width="50" />
        <div class="txt">
            <p>Exchange</p>
            <span>Within 07 days</span>
        </div>
    </div>
</section>
