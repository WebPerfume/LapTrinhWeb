
@{
    ViewBag.Title = "OnlineShopping";
}



<section class="onlShop">
    <div class="container">
        <h2 class="text-center">Get Your Beauty Today</h2>
        <h3 class="text-center">Buy Online, Pick Up  Curbside</h3>
        <p class="purchase text-center">Purchase your products online and get them at a store near you today.</p>
        <div class="onlShop__wrap">
            <div class="onlShop__item">
                <div class="onlShop__logo">
                    <img src="~/IMG/letter.png"  width="80px"/>
                </div>
                <p class="title">Step 1</p>
                <p class="desc">
                    Choose your product and
                    select your store from the
                    "Buy Online & Pick Up" option
                    to see if Curbside Pickup
                    is available.
                </p>
            </div>
            <div class="onlShop__item">
                <div class="onlShop__logo">
                    <img src="~/IMG/car2.png" width="80px" />
                </div>
                <p class="title">Step 2</p>
                <p class="desc">
                    Choose your product and
                    select your store from the
                    "Buy Online & Pick Up" option
                    to see if Curbside Pickup
                    is available.
                </p>
            </div>
            <div class="onlShop__item">
                <div class="onlShop__logo">
                    <img src="~/IMG/location.png" width="80px"/>
                </div>
                <p class="title">Step 3</p>
                <p class="desc">
                    Choose your product and
                    select your store from the
                    "Buy Online & Pick Up" option
                    to see if Curbside Pickup
                    is available.
                </p>
            </div>
        </div>
    </div> 
</section>

<section class="banner">
    <div class="banner__item">
        <img src="~/IMG/car.png" width="50" />
        <div class="txt">
            <p>FreeShip</p>
            <span>FreeShip with orders over 500</span>
        </div>
    </div>
    <div class="banner__item">
        <img src="~/IMG/technical-support.png" width="50" />
        <div class="txt">
            <p>Customer Service(9:00 - 21:00)</p>
            <span>013 32495 324</span>
        </div>
    </div>
    <div class="banner__item">
        <img src="~/IMG/exchange.png" width="50" />
        <div class="txt">
            <p>Exchange</p>
            <span>Within 07 days</span>
        </div>
    </div>
</section>